


<div style="margin-top: 100px; margin-bottom: 100px">
  <h1>Notations</h1>

  <% @faker.each do |fake| %>
  <div class="liste flex">
    <%= link_to 'voir le profil', profil_show_path(fake[:id]), class: "btn btn-primary btn-sm"  %>
    <div class="name"><%= fake[:name] %></div>
    <div class="date"><%= fake[:date] %></div>
    <div class="comment"><%= fake[:commentaire]  %></div>

    <button type="button" class="indice" data-toggle="modal" data-target="#exampleModal"><%= fake[:indice] %></button>
  </div>
  <% end %>

</div>

<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Les notes de Christian</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">
          <% @tag.each_with_index do |tag, index| %>
          <div id="<%= index %>">
            <div ><%= tag %></div>
            <%= render 'slider', status: "slide#{index}"  %>
          </div>
          <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

      </div>
    </div>
  </div>
</div>
