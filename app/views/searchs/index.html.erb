<% content_for :head do %>
  <title>My books and me - chercher un livre %></title>
<% end %>
<div class="container" style="margin-top: 100px; margin-bottom: 130px">
  <h2>Rechercher un livre...</h2>
  <form action="search">
    <input type="hidden" name="status" value="<%= params[:status] %>">
    <div class="d-flex flex-column">
      <div class="d-flex list-inline justify-content-between">
        <label for="title">Par titre :</label>
        <input type="text" id="title" name="title">

        <label for="author">Par auteur :</label>
        <input type="text" id="author" name="author">
      </div>
      <button type="submit" class="btn btn-primary">Lancer la recherche</button>
    </div>
  </form>

  <hr>
  <% if @fj.empty? %>
    <div style="background-color: yellow; padding: 15px;text-align: center;">
      Aucun livre trouvé. Merci de vérifier votre recherche...
    </div>
  <% else %>

    <%= render 'searchs/result', fb: @fb %>
  <% end %>

</div>

