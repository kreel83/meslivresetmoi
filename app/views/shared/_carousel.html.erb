<style>
  .item {
    width: 160px;
    height: 200px;
    margin-right: 10px;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    border: 1px solid white;
    background-color: black;
  }

  .owl-carousel {
    display: flex;
    width: auto;
    padding: 0 15px;
  }

  img {
    width: 100%;
    height: 100%;
  }
</style>

<div class="owl-carousel">
  <%= link_to search_path(status: status) do  %>
    <% if ajout %>
      <div class="item" style="background-color: #B0C4DE;display: flex;flex-direction: column;">
        <i class="fas fa-book-reader" style="font-size: 2rem;color: blue"></i>
        <div style="font-size: 4rem;color: blue">+</div>
      </div>

    <% end %>
  <% end %>

  <% if status == 'livre' %>

    <% ec.each do |book| %>
      <%= link_to liste_show_path(book, status: status) do  %>
        <div class="item"><%= image_tag book.livre.imageurl %></div>
      <% end %>
    <% end %>

  <% else %>

    <% ec.each do |book| %>
      <%= link_to book_show_path(book, status: status) do  %>
        <div class="item"><%= image_tag book.livre.imageurl %></div>
      <% end %>
    <% end %>
  <% end %>
</div>


