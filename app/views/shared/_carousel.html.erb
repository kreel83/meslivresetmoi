<style>
  .item {
    width: 160px;
    height: 200px;
    background-color: #fff;
    margin-right: 10px;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    border: 1px solid white;
    background-color: black;


  }
  .owl-carousel {
    display: flex;
    width: auto;
    padding: 0 15px;

  }

  img {
    width: 100%;
    height: 100%;

  }
</style>


<div class="owl-carousel">
  <%= link_to search_path(status: status) do  %>
  <% if ajout  %>
  <div class="item">+</div>
  <% end %>
  <% end %>
  <% ec.each do |book| %>
    <%= link_to book_show_path(book) do  %>
      <div class="item"><%= image_tag book.livre.imageurl %></div>
    <% end %>
  <% end %>
</div>


